<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/yellowbackground"
    tools:context=".activity.AddWordActivity">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:tint="@color/cardview_dark_background"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:text="Thêm từ mới"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>
    <ImageView
        android:id="@+id/imgAnh"
        android:src="@drawable/w_anhmacdinh"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="300dp">
    </ImageView>

    <EditText
        android:id="@+id/edtTuTA"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bgpurple"
        android:gravity="left"
        android:padding="10dp"
        android:inputType="text"
        android:textColorHint="@color/colorPrimary"
        android:hint="Enter english word"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edtPhienAm"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bgpurple"
        android:gravity="left"
        android:padding="10dp"
        android:inputType="text"
        android:textColorHint="@color/colorPrimary"
        android:hint="Enter pronunciation"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edtNghiaTV"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bgpurple"
        android:gravity="left"
        android:padding="10dp"
        android:inputType="text"
        android:textColorHint="@color/colorPrimary"
        android:hint="Enter meaning"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/spinnerTuLoai"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bgpurple"
        android:gravity="left"
        android:outlineSpotShadowColor="@color/colorPrimary"
        android:padding="10dp"
        android:scrollbarSize="25dp"
        android:textColor="@color/colorPrimary" />
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_1"
        android:fontFamily="@font/fredokaoneregular"
        android:text="Add"
        android:textColor="@color/color_white"
        app:backgroundTint="#F50000"></Button>




</LinearLayout>